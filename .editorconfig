# https://editorconfig.org/

root = true

[*]
charset                  = utf-8
indent_size              = 2
indent_style             = space
insert_final_newline     = true
max_line_length          = off
trim_trailing_whitespace = true

[*.cs]
indent_size              = 4

[*.dotsettings]
charset                  = utf-8-bom
end_of_line              = lf
indent_style             = tab

[*.sln]
charset                  = utf-8-bom
end_of_line              = crlf
indent_style             = tab
